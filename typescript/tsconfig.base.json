{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@allors/core/workspace/domain": [
        "libs/core/workspace/domain/src/index.ts"
      ],
      "@allors/core/workspace/meta": ["libs/core/workspace/meta/src/index.ts"],
      "@allors/core/workspace/meta-json": [
        "libs/core/workspace/meta-json/src/index.ts"
      ],
      "@allors/system/common/protocol-json": [
        "libs/system/common/protocol-json/src/index.ts"
      ],
      "@allors/system/workspace/adapters": [
        "libs/system/workspace/adapters/src/index.ts"
      ],
      "@allors/system/workspace/adapters-json": [
        "libs/system/workspace/adapters-json/src/index.ts"
      ],
      "@allors/system/workspace/adapters-json-tests": [
        "libs/system/workspace/adapters-json-tests/src/index.ts"
      ],
      "@allors/system/workspace/adapters-tests": [
        "libs/system/workspace/adapters-tests/src/index.ts"
      ],
      "@allors/system/workspace/domain": [
        "libs/system/workspace/domain/src/index.ts"
      ],
      "@allors/system/workspace/meta": [
        "libs/system/workspace/meta/src/index.ts"
      ],
      "@allors/system/workspace/meta-json": [
        "libs/system/workspace/meta-json/src/index.ts"
      ],
      "@allors/system/workspace/meta-json-tests": [
        "libs/system/workspace/meta-json-tests/src/index.ts"
      ],
      "@allors/system/workspace/meta-tests": [
        "libs/system/workspace/meta-tests/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
